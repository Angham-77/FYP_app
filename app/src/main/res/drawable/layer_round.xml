<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The rounded corner background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/Round" /> <!-- Default color; will be overridden in code -->
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- The overlay item for changing color. Initially transparent. -->
    <item android:id="@+id/color_overlay">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- This color will change dynamically -->
        </shape>
    </item>
</layer-list>
