<resources>
    <!-- Base application theme with no action bar settings -->
    <style name="Base.Theme.FYP_Habitiny" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textColorPrimary">@color/TextColor</item>
        <item name="android:textColorSecondary">@color/hintText</item>
    </style>

    //
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textColorPrimary">@color/TextColor</item>
        <item name="android:textColorSecondary">@color/hintText</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/nav_grey</item>
        <item name="itemTextColor">@color/nav_grey</item>
    </style>

    //

    <!-- Specific theme for activities using a custom toolbar -->
    <style name="Theme.FYP_Habitiny.CustomToolbar" parent="Base.Theme.FYP_Habitiny">
        <!-- Customizations specific to activities that use a custom toolbar -->
    </style>

    <!-- Default app theme applied to the app unless overridden -->
  <!--  <style name="AppTheme" parent="Base.Theme.FYP_Habitiny">
    </style>-->

    <!-- Overlay styles for AppCompat ActionBar and Popup -->
    <style name="Base.Theme.FYP_Habitiny.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Base.Theme.FYP_Habitiny.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
