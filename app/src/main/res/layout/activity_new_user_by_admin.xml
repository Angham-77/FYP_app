<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LLHMByAdmin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityAddNewUserByAdmin"
    android:background="@color/background"
    android:layout_gravity="center_vertical">


    <TextView
        android:id="@+id/textViewNewUserTitleByAdmin"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginBottom="30dp"
        android:text="\nCreate New User"
        android:textAlignment="center"
        android:textColor="@color/button_color"
        android:textSize="30dp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/LLH1ByAdmin"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/editTextFullNameByAdmin"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter Full Name"
            android:inputType="textPersonName"
            android:textColorHint="@color/hintText"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLH2ByAdmin"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">



        <EditText
            android:id="@+id/editTextTextEmailAddressByAdmin"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:hint="Enter Email"
            android:textColorHint ="@color/hintText"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LLH4ByAdmin"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <EditText
            android:id="@+id/editTextPhoneNoByAdmin"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:hint="Enter Phone No"
            android:textColorHint ="@color/hintText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLH6ByAdmin"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <EditText
            android:id="@+id/editTextNewUserNameByAdmin"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:hint="Enter Username"
            android:textColorHint ="@color/hintText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLH7ByAdmin"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">



        <EditText
            android:id="@+id/editTextNewUserPasswordByAdmin"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Enter Password"
            android:textColorHint ="@color/hintText"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewMessageByAdmin"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:textColor="@color/TextColor"
        android:textSize="18sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>


    <Button
        android:id="@+id/buttonSaveByAdmin"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_round"
        android:onClick="saveNewUserButtonByAdmin"
        android:text="Save" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_viewAddUserAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_color"
        app:menu="@menu/bottom_nav_menu_admin"
        tools:ignore="MissingConstraints"
        style="@style/BottomNavigationViewStyle"/>


</LinearLayout>