<!-- res/layout/list_item_product.xml -->
<LinearLayout
    android:id="@+id/habitItemContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background = "@color/singlHabit">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/habitNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Habit Name"/>

        <TextView
            android:id="@+id/HabitStartDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Start Date: 00/00/0000"/>

        <TextView
            android:id="@+id/HabitTargetNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Target: 0"/>

        <TextView
            android:id="@+id/HabitCurrentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Current Count: 0"/>

        <TextView
            android:id="@+id/HabitTimePref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Time: text"/>


       <!-- <CheckBox
            android:id="@+id/HabitDonecheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done" />-->


        <ImageButton
            android:id="@+id/RemoveHabitBtn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:onClick="addToOrderClick"
            android:src="@drawable/baseline_delete_24"
            android:background="@android:color/transparent"/>

    </LinearLayout>
    <!-- ImageButton placed here to align it to the right of the LinearLayout -->
    <ImageButton
        android:id="@+id/imageButtonTargetIncrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@drawable/icons8_plus_30" />

</LinearLayout>

