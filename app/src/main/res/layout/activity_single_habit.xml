<!-- res/layout/list_item_product.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/habitNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Habit Name"/>

        <TextView
            android:id="@+id/HabitStartDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Start Date: 00/00/0000"/>

        <TextView
            android:id="@+id/HabitTargetNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Target: 0"/>

        <TextView
            android:id="@+id/HabitTimePref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Time: text"/>


        <CheckBox
            android:id="@+id/HabitDonecheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done" />

        <Button
            android:id="@+id/RemoveHabitBtn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:backgroundTint="#2A4262"
            android:onClick="addToOrderClick"
            android:text="Remove" />

    </LinearLayout>

</LinearLayout>

