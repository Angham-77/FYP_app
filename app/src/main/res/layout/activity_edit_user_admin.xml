<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LLHMEditUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityAdminEdtUser"
    android:background="@color/background"
    android:layout_gravity="center_vertical">


    <TextView
        android:id="@+id/textViewNewUserTitleEditUser"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:text="\nEdit User Deatils"
        android:textAlignment="center"
        android:textColor="@color/button_color"
        android:textStyle="italic"
        android:textSize="30dp"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:id="@+id/LLH1EditUser"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="Name:" />

        <EditText
            android:id="@+id/editTextFullNameEditUser"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint=" Full Name"
            android:inputType="textPersonName"
            android:textColorHint="@color/hintText"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLH2EditUser"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="Email:" />

        <EditText
            android:id="@+id/editTextTextEmailAddressEditUser"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:hint=" Email"
            android:textColorHint ="@color/hintText"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LLH4EditUser"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No:" />

        <EditText
            android:id="@+id/editTextPhoneNoEditUser"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:hint=" Phone No"
            android:textColorHint ="@color/hintText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLH6EditUser"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:" />

        <EditText
            android:id="@+id/editTextNewUserNameEditUser"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:hint=" Username"
            android:textColorHint ="@color/hintText"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewMessageEditUser"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:textColor="@color/TextColor"
        android:textSize="18sp" />



    <Button
        android:id="@+id/buttonUpdateEditUser"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="updateUserDetailsButton"
        android:text="Update"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_round"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_viewEditUserAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_color"
        app:menu="@menu/bottom_nav_menu_admin"
        tools:ignore="MissingConstraints"
        style="@style/BottomNavigationViewStyle"/>


</LinearLayout>