<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LLHMPreEditUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityAdminEditUserPre"
    android:background="@color/background"
    android:layout_gravity="center_vertical">


    <TextView
        android:id="@+id/textViewNewUserTitlePreEditUser"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:text="\nEdit User Deatils"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/LLH1PreEditUser"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/editTextFullNamePreEditUser"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:hint="Enter Username"
            android:inputType="textPersonName"
            android:textColorHint="@color/hintText"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewMessagePreEditUser"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:textColor="@color/design_default_color_error"
        android:textSize="18sp" />



    <Button
        android:id="@+id/buttonSubmitEditUser"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#2A4262"
        android:onClick="checkUserAndPopulateDetails"
        android:text="Edit" />


    <Button
        android:id="@+id/buttonDeleteEditUser"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#2A4262"
        android:onClick="removeUser"
        android:text="Delete" />

</LinearLayout>