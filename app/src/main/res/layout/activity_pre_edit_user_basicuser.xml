<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LLHMPreEditUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityEditUserPreBasic"
    android:background="@color/background"
    android:layout_gravity="center_vertical">


    <TextView
        android:id="@+id/textViewNewUserTitlePreEditUserBasic"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:text="\nEdit User Details"
        android:textAlignment="center"
        android:textColor="@color/button_color"
        android:textStyle="italic"
        android:textSize="26dp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:id="@+id/LLH1PreEditUserBasic"
        android:layout_width="395dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/editTextFullNamePreEditUserBasic"
            android:layout_width="376dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter Username"
            android:inputType="textPersonName"
            android:textColorHint="@color/hintText"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewMessagePreEditUserBasic"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:textColor="@color/design_default_color_error"
        android:textSize="18sp" />



    <Button
        android:id="@+id/buttonSubmitEditUserBasic"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="checkUserAndPopulateDetailsBasic"
        android:text="Edit"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_round"/>


    <Button
        android:id="@+id/buttonDeleteEditUserBasic"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="removeUserBasic"
        android:text="Delete"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_round"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_viewEditUsePreBasic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_color"
        app:menu="@menu/bottom_nav_menu"
        tools:ignore="MissingConstraints"
        style="@style/BottomNavigationViewStyle"/>

</LinearLayout>